#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex
#: import StiffScrollEffect kivymd.stiffscroll.StiffScrollEffect

#: import CraneFlyScreen libs.baseclass.fly_screen.CraneFlyScreen
#: import CraneSleepScreen libs.baseclass.sleep_screen.CraneSleepScreen
#: import CraneEatScreen libs.baseclass.eat_screen.CraneEatScreen

<CraneRootScreen>

	MDBoxLayout:
		orientation: "vertical"
		md_bg_color: gch("#5D1049")

		MDBoxLayout:
			size_hint_y: None
			height: root.theme_cls.standard_increment
			md_bg_color: gch("#5D1049")
			padding: dp(10)
			spacing: dp(10)

			Image:
				source: f"{environ['CRANE_ROOT']}/assets/images/logo_light.png"
				size_hint: (None, None)
				size: dp(40), dp(40)

			MDBoxLayout:
				id: tab

				CraneNavigationLabel:
					text: "FLY"
					state: "down"
					on_press: carousel.index = 0

				CraneNavigationLabel:
					text: "SLEEP"
					on_press: carousel.index = 1

				CraneNavigationLabel:
					text: "EAT"
					on_press: carousel.index = 2

		MDCarousel:
			id: carousel
			on_slide_complete: root.on_slide_complete(*args)			

			CraneFlyScreen:
				name: "fly"

			CraneSleepScreen:
				name: "sleep"

			CraneEatScreen:
				name: "eat"

<ScrollView>
	bar_width: 0
	effect_cls: StiffScrollEffect

<CraneNavigationLabel>
    group: "nav-bar"
    font_style: "Button"
    adaptive_size: True
    halign: "center"
    opposite_colors: True
    allow_no_selection: False
	pos_hint: {"center_y": .5}

	canvas.before:
		Color:
			rgba: (1, 1, 1, 1)
		Line:
			width: dp(1.2) if self.state == "down" else 0.0001
			rounded_rectangle:
				(self.x - dp(2), self.y - dp(5), self.width + dp(3), self.height + dp(10),\
				dp(15), dp(15), dp(15), dp(15),\
				self.height)

<CraneTextField@MDTextFieldRound>
	size_hint_y: None
	height: dp(90)
	icon_left_color: gch("#C79EBE")
	color_active: gch("#720D5D")
	normal_color: gch("#720D5D")
	line_color: (0, 0, 0, 0)
	foreground_color: gch("#ffffff")
	font_name: f"{environ['CRANE_ROOT']}/assets/fonts/Raleway-Medium.ttf"

<CraneListItem>
	size_hint_y: None
	padding: dp(20)
	spacing: dp(10)
	height: dp(80)

	canvas:
		Color:
			rgba:
				self.theme_cls.divider_color
		Line:
			points: (root.x+dp(16), root.y, root.x+self.width-dp(16)-0, root.y)

	MDBoxLayout:
		adaptive_size: True
		pos_hint: {"center_x": .5, "center_y": .5}

		FitImage:
			source: root.image
			size_hint: (None, None)
			size: (dp(70), dp(60))
			radius: [10,]

	MDBoxLayout:
		orientation: 'vertical'
		adaptive_height: True
		pos_hint: {"center_x": .5, "center_y": .5}
		spacing: dp(10)

		MDLabel:
			text: root.text
			font_style: "Subtitle1"
			adaptive_height: True

		MDLabel:
			text: root.secondary_text
			font_style: "Caption"
			theme_text_color: "Hint"
			adaptive_height: True