<KitchenSinkFileManager>
    name: "file manager"

    Toolbar:
        id: toolbar
        pos_hint: {"top": 1}


    MDRaisedButton:
        text: "Open files manager"
        pos_hint: {"center_x": .5, "center_y": .5}
        theme_button_color:"Accent"
        # theme_text_color:"Primary"
        on_release:
            root.file_manager_open()

<KitchenSinkFileFileManagerTypeDialog>:
    orientation: "vertical"
    adaptive_height: True
    spacing: "24dp"

    MDLabel:
        text: "Open manager with 'list' or 'preview' mode?"

    MDBoxLayout:
        orientation: "horizontal"
        adaptive_height: True
        spacing: "12dp"

        MDCheckbox:
            on_active: root.set_selection_type(*args)
            size_hint: None, None
            size: "48dp", "48dp"

        MDLabel:
            text: "Allow Multiple Selection ?"
