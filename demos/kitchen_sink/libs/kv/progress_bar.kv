<ProgressBars@Screen>
    name: 'progress bar'

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        Toolbar:
            id: toolbar

        BoxLayout:
            orientation: 'vertical'
            padding: '8dp'

            MDLabel:
                text: "[b]Slider[/b] with [b]hint = True[/b]"
                markup: True
                halign: "center"
                theme_text_color: "Primary"
                height: self.texture_size[1]+dp(12)
                size_hint_y: None

            MDSlider:
                id: progress_slider
                min: 0
                max: 100
                value: 40

            MDLabel:
                text: "[b]Slider[/b] with the [b]hint_box[/b] elevated!"
                markup: True
                halign: "center"
                theme_text_color: "Primary"
                height: self.texture_size[1]+dp(12)
                size_hint_y: None

            MDSlider:
                id: progress_slider
                min: 0
                max: 100
                value: 40
                hint_elevation: 2

            MDLabel:
                text: "[b]Slider[/b] with [b]hint = False[/b]"
                markup: True
                halign: "center"
                theme_text_color: "Primary"
                height: self.texture_size[1]+dp(12)
                size_hint_y: None

            MDSlider:
                id: progress_slider
                min: 0
                max: 100
                value: 40
                hint: False

            MDLabel:
                text: "Examples [b]MDProgressBar[/b]"
                markup: True
                halign: "center"
                theme_text_color: "Primary"


            BoxLayout:
                size_hint_y:2

                MDProgressBar:
                    orientation: "vertical"
                    reversed: True
                    value: progress_slider.value
                    size_hint_x:None
                    width: dp(48)

                BoxLayout:
                    padding:dp(16)
                    orientation: "vertical"
                    MDProgressBar:
                        value: progress_slider.value

                    MDProgressBar:
                        reversed: True
                        value: progress_slider.value

                MDProgressBar:
                    orientation: "vertical"
                    value: progress_slider.value
                    size_hint_x:None
                    width: dp(48)
